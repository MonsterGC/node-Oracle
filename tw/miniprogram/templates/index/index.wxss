.home-header swiper {
  width: 100%;
  height: 310rpx;
}

.home-header swiper image {
  width: 100%;
  height: 310rpx;
}

.list {
  width: 700rpx;
  margin: auto;
  overflow: scroll;
}

.list-item {
  width: 680rpx;
  margin: 20rpx auto;
  height: 300rpx;
  background: #1c2438;
  border-radius: 10rpx;
  box-shadow: 5px 5px 3px #ddd;
  display: flex;
  color: #fff;
  flex-direction: row;
}

.list-item image {
  width: 200rpx;
  height: 260rpx;
  margin: 20rpx;
  box-shadow: 1px 1px 1px 1px #fff;
}

.list-item .list-2 {
  width: 640rpx;
  height: 260rpx;
  margin: 20rpx;
  font-size: 25rpx;
  line-height: 50rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  font-family: 'Times New Roman', Times, serif;
}

.list-2 span {
  font-size: 26rpx;
  font-weight: 600;
  margin-right: 10rpx;
}

.list-2 view:last-child {
  height: 110rpx;
  white-space: normal;
}

.mine .contain {
  width: 520rpx;
  /* height: 400rpx; */
  background: #2d8cf0;
  margin: 200rpx auto;
  border-radius: 20rpx;
  text-align: center;
  color: #fff;
  padding: 20rpx;
  box-shadow: 5px 5px 3px#ddd;
}

.mine .contain span {
  font-size: 30rpx;
  font-family: cursive;
}

.mine .contain .user {
  width: 150rpx;
  height: 150rpx;
  overflow: hidden;
  border-radius: 50%;
  margin: 20rpx auto;
}

.user .btn {
  margin-top: 20rpx;
}

.remind {
  overflow: scroll;
}

.remind-tips {
  text-align: center;
}

.remind-tips span {
  font-size: 23rpx;
  color: #ddd;
  font-family: cursive;
}